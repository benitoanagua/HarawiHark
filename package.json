{
  "name": "harawihark",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "generate:theme": "tsx src/lib/material-theme/cli.ts",
    "prestart": "npm run generate:theme",
    "prebuild": "npm run generate:theme",
    "storybook": "ng run harawihark:storybook",
    "build-storybook": "ng run harawihark:build-storybook",
    "capture:video": "tsx src/lib/capture/cli.ts video",
    "capture:video:advanced": "tsx src/lib/capture/cli.ts video --advanced",
    "capture:video:quick": "tsx src/lib/capture/cli.ts video --duration 10",
    "capture:screenshots": "tsx src/lib/capture/cli.ts screenshots",
    "capture:screenshots:jpeg": "tsx src/lib/capture/cli.ts screenshots --format jpeg",
    "capture:demo": "tsx src/lib/capture/cli.ts demo",
    "capture:demo:advanced": "tsx src/lib/capture/cli.ts demo --advanced",
    "capture:full-demo": "tsx src/lib/capture/cli.ts full-demo",
    "capture:quick": "tsx src/lib/capture/cli.ts quick",
    "capture:all": "npm run capture:demo",
    "test:e2e": "playwright test",
    "test:e2e:core": "playwright test e2e-tests/poetry-editor.spec.ts e2e-tests/poetry-workflow.spec.ts e2e-tests/state-integration.spec.ts --project=brave",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:debug": "playwright test --headed --debug",
    "test:e2e:ci": "playwright test --reporter=github --project=brave",
    "test:e2e:report": "playwright show-report test-results/html-report",
    "test:e2e:all-browsers": "playwright test --project=all",
    "clean": "rm -rf dist node_modules/.cache .angular",
    "clean:captures": "rm -rf angular-captures",
    "clean:test": "rm -rf test-results",
    "clean:all": "npm run clean && npm run clean:captures && npm run clean:test"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.5",
    "@angular/compiler": "^20.3.5",
    "@angular/core": "^20.3.5",
    "@angular/forms": "^20.3.5",
    "@angular/platform-browser": "^20.3.5",
    "@angular/router": "^20.3.5",
    "@tailwindcss/postcss": "^4.1.14",
    "postcss": "^8.5.6",
    "rita": "^3.1.3",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.14",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.5",
    "@angular-eslint/builder": "20.4.0",
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.5",
    "@compodoc/compodoc": "^1.1.31",
    "@emotion/css": "^11.13.5",
    "@eslint/js": "^9.37.0",
    "@iconify-json/iconoir": "^1.2.9",
    "@iconify/tailwind4": "^1.0.6",
    "@material/material-color-utilities": "^0.3.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-essentials": "9.0.0-alpha.12",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/angular": "^9.1.10",
    "@types/jasmine": "~5.1.10",
    "@types/node": "^24.7.2",
    "angular-eslint": "20.4.0",
    "commander": "^14.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.37.0",
    "eslint-plugin-storybook": "^9.1.10",
    "inquirer": "^12.10.0",
    "jasmine-core": "~5.12.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "playwright": "^1.56.1",
    "postcss-loader": "^8.2.0",
    "storybook": "^9.1.10",
    "style-loader": "^4.0.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.46.1"
  }
}
