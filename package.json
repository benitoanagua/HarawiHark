{
  "name": "harawihark",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "generate:theme": "tsx src/lib/material-theme/cli.ts",
    "prestart": "npm run generate:theme",
    "prebuild": "npm run generate:theme",
    "storybook": "ng run harawihark:storybook",
    "build-storybook": "ng run harawihark:build-storybook"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@tailwindcss/postcss": "^4.1.14",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.14",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.5",
    "@angular-eslint/builder": "20.4.0",
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.0",
    "@compodoc/compodoc": "^1.1.31",
    "@eslint/js": "^9.37.0",
    "@iconify-json/iconoir": "^1.2.9",
    "@iconify/tailwind4": "^1.0.6",
    "@material/material-color-utilities": "^0.3.0",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/angular": "^9.1.10",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.7.0",
    "angular-eslint": "20.4.0",
    "eslint": "^9.37.0",
    "eslint-plugin-storybook": "^9.1.10",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "storybook": "^9.1.10",
    "tsx": "^4.20.6",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.46.0"
  }
}
